<article class="post-card post-detail">
  <h1 class="post-title"><%= page.title %></h1>
  <div class="post-meta">
    <span class="post-date"><i class="bi bi-calendar3"></i> <%= date(page.date, 'YYYY-MM-DD') %></span>
    <span class="post-words"><i class="bi bi-file-earmark-word"></i> <%= wordcount(page.content) %> 字</span>
    <span class="post-time"><i class="bi bi-clock"></i> <%= min2read(page.content) %> 分钟</span>
    <% if (page.tags && page.tags.length) { %>
      <span class="post-tags">
        <i class="bi bi-tags"></i>
        <% page.tags.each(function(tag){ %>
          <a href="<%= url_for(tag.path) %>" class="post-tag-link"><%= tag.name %></a>
        <% }) %>
      </span>
    <% } %>
  </div>
  <hr class="post-divider" />
  <div class="post-content"><%- page.content %></div>
  <div class="post-nav">
    <% if (page.prev) { %>
      <a class="post-prev" href="<%= url_for(page.prev.path) %>">← 上一篇：<%= page.prev.title %></a>
    <% } %>
    <% if (page.next) { %>
      <a class="post-next" href="<%= url_for(page.next.path) %>">下一篇：<%= page.next.title %> →</a>
    <% } %>
  </div>
</article> 