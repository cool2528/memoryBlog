# MinipPro 主题配置示例
# 复制此文件为 _config.yml 并根据需要修改

name: minipro
author: memory
version: 1.2.0

# 网站基本信息
site:
  logo: "/images/logo.png" # 自定义 logo 路径，留空使用默认
  favicon: "/images/favicon.ico" # 网站图标
  keywords: "博客,技术,前端,开发" # SEO 关键词
  description: "一个专注于技术分享的个人博客" # 网站描述
  
# 主题外观配置
appearance:
  # 主题色彩配置
  colors:
    primary: "#667eea" # 主色调
    secondary: "#f093fb" # 辅助色
    accent: "#4299e1" # 强调色
  
  # 字体配置
  fonts:
    main: 'Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif'
    code: '"JetBrains Mono", "Fira Code", "SF Mono", monospace'
    size: "16px" # 基础字体大小
  
  # 布局配置
  layout:
    sidebar_width: "280px" # 侧边栏宽度
    content_width: "800px" # 内容区域最大宽度
    header_height: "60px" # 头部高度
  
  # 动画效果
  animations:
    enabled: true # 是否启用动画
    duration: "0.3s" # 动画持续时间
    easing: "ease-in-out" # 动画缓动函数

# 功能开关
features:
  # 搜索功能
  search:
    enabled: true
    placeholder: "搜索文章..." # 搜索框占位符
    max_results: 10 # 最大搜索结果数
  
  # 回到顶部
  back_to_top:
    enabled: true
    threshold: 300 # 滚动多少像素后显示
  
  # 阅读进度条
  reading_progress:
    enabled: true
    position: "top" # top 或 bottom
  
  # 图片灯箱
  lightbox:
    enabled: true
    gallery: true # 是否启用画廊模式
  
  # 代码复制
  code_copy:
    enabled: true
    success_text: "复制成功!" # 复制成功提示文本
  
  # 文章字数统计
  word_count:
    enabled: true
    reading_speed: 200 # 每分钟阅读字数
  
  # 文章目录
  toc:
    enabled: true
    max_depth: 3 # 目录最大深度
    position: "right" # left 或 right

# 统计分析配置
analytics:
  # Google Analytics
  google:
    enabled: false
    tracking_id: "" # GA 跟踪 ID，如 G-XXXXXXXXXX
  
  # 百度统计
  baidu:
    enabled: false
    site_id: "" # 百度统计站点 ID
  
  # 51LA 统计
  la51:
    enabled: false
    site_id: "" # 51LA 站点 ID
  
  # 自定义统计代码
  custom:
    enabled: false
    head_code: "" # 在 head 中插入的代码
    body_code: "" # 在 body 结束前插入的代码
  
  # 访问统计显示
  visitor_stats:
    enabled: true
    show_pv: true # 显示页面访问量
    show_uv: true # 显示独立访客数
    api_url: "" # 自定义统计 API 地址

# 社交媒体配置
social:
  github: "" # GitHub 用户名
  twitter: "" # Twitter 用户名
  weibo: "" # 微博用户名
  email: "" # 邮箱地址
  qq: "" # QQ 号码
  wechat: "" # 微信号
  telegram: "" # Telegram 用户名
  linkedin: "" # LinkedIn 用户名

# 评论系统配置
comments:
  # Gitalk
  gitalk:
    enabled: false
    client_id: ""
    client_secret: ""
    repo: ""
    owner: ""
    admin: []
  
  # Valine
  valine:
    enabled: false
    app_id: ""
    app_key: ""
    placeholder: "说点什么吧..." # 评论框占位符
    avatar: "mp" # 头像样式
    guest_info: ["nick", "mail", "link"] # 访客信息
  
  # Waline
  waline:
    enabled: false
    server_url: "" # Waline 服务器地址
    placeholder: "说点什么吧..."

# SEO 优化配置
seo:
  # 结构化数据
  structured_data:
    enabled: true
    type: "Blog" # 网站类型
  
  # Open Graph
  open_graph:
    enabled: true
    image: "/images/og-image.png" # 默认分享图片
  
  # Twitter Card
  twitter_card:
    enabled: true
    type: "summary_large_image" # 卡片类型
    site: "" # Twitter 用户名

# 友情链接
friends:
  - name: Hexo 官网
    link: https://hexo.io/
    avatar: https://hexo.io/logo.svg
    descr: 快速、简洁且高效的博客框架
  - name: MDN Web Docs
    link: https://developer.mozilla.org/zh-CN/
    avatar: https://developer.mozilla.org/favicon.svg
    descr: 服务 Web 开发者的资源

# 导航菜单配置
menu:
  home:
    name: "首页"
    url: "/"
    icon: "bi-house"
  archives:
    name: "归档"
    url: "/archives"
    icon: "bi-archive"
  categories:
    name: "分类"
    url: "/categories"
    icon: "bi-folder"
  tags:
    name: "标签"
    url: "/tags"
    icon: "bi-tags"
  projects:
    name: "项目"
    url: "/projects"
    icon: "bi-code-square"
  about:
    name: "关于"
    url: "/about"
    icon: "bi-person"
  friends:
    name: "友链"
    url: "/friends"
    icon: "bi-people"

# 页脚配置
footer:
  copyright: "© 2024 Memory. All rights reserved."
  powered_by: true # 是否显示 "Powered by Hexo"
  theme_info: true # 是否显示主题信息
  icp: "" # ICP 备案号
  police: "" # 公安备案号
  
# 其他配置
misc:
  # 加载动画
  loading:
    enabled: true
    type: "spinner" # spinner, dots, bars
  
  # 404 页面
  error_404:
    enabled: true
    title: "页面未找到"
    message: "抱歉，您访问的页面不存在。"
    
  # 维护模式
  maintenance:
    enabled: false
    title: "网站维护中"
    message: "网站正在维护升级，请稍后访问。"

# 自定义 CSS 和 JS
custom:
  css: false # 是否启用自定义 CSS (source/css/custom.css)
  js: false # 是否启用自定义 JS (source/js/custom.js)